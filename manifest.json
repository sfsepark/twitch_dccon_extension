{
    "manifest_version" : 2,
    "name": "Twitch_DCCON_extension",
    "version" : "1.2.0",

    "browser_action": {
        "css":["plugins/bootstrap.min.css"],
        "scripts":["plugins/jquery.min.js","plugins/jquery.min.js","plugins/jquery.quicksearch.min.js","plugins/jquery.lazyload.min.js"],
		"default_popup": "popup/popup_selector.html"
	},

    "icons": { "16": "DCCON_16.png",
           "48": "DCCON_48.png",
          "128": "DCCON_img.png" },

    "content_scripts": [{
        "matches" : ["https://clips.twitch.tv/*","https://*.twitch.tv/funzinnu","https://*.twitch.tv/funzinnu/*","https://*.twitch.tv/videos/*"],
        "css":["styles/styles.css"],
        "js":[
            "content_scripts/dccon_searcher.js"
        ]        
        , "run_at" : "document_end"
    }],
    "background": {
        "scripts": ["background/background.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
    "permissions": [
        "tabs",
        "contextMenus"
    ]
}